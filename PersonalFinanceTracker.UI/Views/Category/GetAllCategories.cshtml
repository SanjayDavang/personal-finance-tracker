@model List<PersonalFinanceTracker.Core.DTOs.CategoryBudgetResponseDto>

@{
    ViewData["Title"] = "Category List";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
<link rel="stylesheet" href="~/css/Categories.css" /> 

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var successMessage = "@TempData["SuccessMessage"]";
        var errorMessage = "@TempData["ErrorMessage"]";

        if (successMessage) {
            Swal.fire({
                icon: "success",
                title: "Success!",
                text: successMessage,
                confirmButtonColor: "#28a745"
            }).then(() => {
                window.location.href = '@Url.Action("GetAllCategories", "Category")';
            });
        }

        if (errorMessage) {
            Swal.fire({
                icon: "error",
                title: "Oops...",
                text: errorMessage,
                confirmButtonColor: "#d33"
            });
        }
    });
</script>

<div class="container">
    <h2 class="title">Categories</h2>
    <a asp-action="AddCategory" class="btn btn-primary text-decoration-none fw-bold mb-3">+ Add Category</a>

    @if (Model != null && Model.Count > 0)
    {
        <div class="table-container">
            <table id="categories" class="table table-hover table-responsive">
                <thead>
                    <tr>
                        <th>Category Name</th>
                        <th>Type</th>
                        <th>Budget Amount</th>
                        <th>From Date</th>
                        <th>To Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        var rowClass = category.Status == "Over Budget" ? "table-danger" : "";
                        <tr class="@rowClass">
                            <td data-label="Category Name">@category.Name</td>
                            <td data-lable="Type" class="@(category.Type == "Income" ? "text-success" : "text-danger")">@category.Type</td>
                            <td data-label="Type">@(category.Type == "Income" ? "NA" : @category.Amount.ToString("C"))
                                @if(category.Status == "Over Budget")
                    {
                        <div style="font-size:small; color:red;">
                            Exceeded the limit by <b>@category.Overspend.ToString("C")</b>;
                        </div>
                    }
                            </td>
                            <td data-label="Type">@category.StartDate</td>
                            <td data-label="Type">@category.EndDate</td>
                            <td data-label="Actions">
                                <a asp-action="EditCategory" asp-route-id="@category.Category_Id" class="btn edit-btn">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="DeleteCategory" asp-route-id="@category.Category_Id" class="btn delete-btn" onclick="confirmDelete(event, this);">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

        <script>
            $(document).ready(function () {
                $('#categories').DataTable({
                });
            });

            function confirmDelete(event, element) {
                event.preventDefault(); // Prevent the default action

                Swal.fire({
                    title: "Are you sure?",
                    text: "This category will be permanently deleted!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#d33",
                    cancelButtonColor: "#3085d6",
                    confirmButtonText: "Yes, delete it!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = element.href;
                    }
                });
            }
        </script>

    }
    else
    {
        <p class="text-center">No categories found.</p>
    }
</div>