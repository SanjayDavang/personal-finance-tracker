@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="~/css/login.css"/>

@if (@ViewBag.Error != null)
{
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            showInvalidCredentialsAlert();
        });

        function showInvalidCredentialsAlert() {
            Swal.fire({
                title: "Invalid Credentials",
                text: "The username or password you entered is incorrect. Please try again.",
                icon: "error",
                confirmButtonColor: "#d33",
                confirmButtonText: "OK"
            });
        }
    </script>
}

<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="login-box">
        <h2 class="text-center">Welcome Back!</h2>
        <p class="form-description text-center">Enter your credentials to access your account.</p>

        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            <div class="mb-3">
                <input type="text" class="form-control login-input" placeholder="Username" name="Username" required />
            </div>

            <div class="mb-3 position-relative">
                <input type="password" class="form-control login-input" placeholder="Password" name="Password" id="loginPassword" required />
                <span class="password-toggle" id="togglePassword">
                    <i class="fas fa-eye"></i>
                </span>
            </div>

            <button class="btn btn-primary w-100 login-btn" type="submit">Login</button>
        }

        <p class="mt-3 text-center">
            Don't have an account?
            <a href="@Url.Action("Register", "Account")" class="register-link">Register</a>
        </p>
    </div>
</div>

<script src="~/js/login.js" asp-append-version="true" defer></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
